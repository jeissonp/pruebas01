<?php
/**
 * Implements hook_menu().
 */
function ves_home_menu() {
  return array(
    'home' => array(
      'title' => 'COMUNIDAD VEA',
      'page callback' => 'vea_home_page',
      'access arguments' => array('access content'),
    ),
  );
}

function vea_home_page() {
  $content = array();
  if (user_is_logged_in()) {
    drupal_goto('user');
  }
  return $content;
}